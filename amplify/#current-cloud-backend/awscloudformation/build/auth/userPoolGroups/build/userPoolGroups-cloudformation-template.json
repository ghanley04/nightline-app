{
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"13.0.1\",\"stackType\":\"auth-Cognito-UserPool-Groups\",\"metadata\":{\"whyContinueWithGen1\":\"\"}}",
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "AuthRoleArn": {
      "Type": "String"
    },
    "UnauthRoleArn": {
      "Type": "String"
    },
    "authnightlineapiUserPoolId": {
      "Type": "String",
      "Default": "authnightlineapiUserPoolId"
    },
    "authnightlineapiIdentityPoolId": {
      "Type": "String",
      "Default": "authnightlineapiIdentityPoolId"
    },
    "authnightlineapiAppClientID": {
      "Type": "String",
      "Default": "authnightlineapiAppClientID"
    },
    "authnightlineapiAppClientIDWeb": {
      "Type": "String",
      "Default": "authnightlineapiAppClientIDWeb"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "profileUsersGroup": {
      "Type": "AWS::Cognito::UserPoolGroup",
      "Properties": {
        "Description": "override success",
        "GroupName": "profileUsers",
        "Precedence": 1,
        "RoleArn": {
          "Fn::GetAtt": [
            "profileUsersGroupRole",
            "Arn"
          ]
        },
        "UserPoolId": {
          "Ref": "authnightlineapiUserPoolId"
        }
      }
    },
    "profileUsersGroupRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Federated": "cognito-identity.amazonaws.com"
              },
              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringEquals": {
                  "cognito-identity.amazonaws.com:aud": {
                    "Ref": "authnightlineapiIdentityPoolId"
                  }
                },
                "ForAnyValue:StringLike": {
                  "cognito-identity.amazonaws.com:amr": "authenticated"
                }
              }
            }
          ]
        },
        "RoleName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "authnightlineapiUserPoolId"
              },
              "-profileUsersGroupRole"
            ]
          ]
        }
      }
    }
  },
  "Outputs": {
    "profileUsersGroupRole": {
      "Value": {
        "Fn::GetAtt": [
          "profileUsersGroupRole",
          "Arn"
        ]
      }
    }
  }
}